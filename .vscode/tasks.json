{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Configure Debug CMake Project",
            "command": "cmake -B ./build -DCMAKE_BUILD_TYPE=Debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "type": "shell",
            "label": "Build Debug CMake Project",
            "command": "cmake -B ./build -DCMAKE_BUILD_TYPE=Debug; cmake --build ./build --config Debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ]
}